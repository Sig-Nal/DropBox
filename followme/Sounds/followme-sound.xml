<PropertyList>
  <fx>
    
    <engine>
      <name>engine starting</name>
      <mode>looped</mode>
      <path>Aircraft/followme/Sounds/Renault4-starting.wav</path>
      <condition>
	<not-equals>
	  <property>sim/multiplay/generic/int[7]</property>
	  <value>0</value>
	</not-equals>
      </condition>
      <volume>
	<min>0.1</min>
	<max>1.0</max>
	<offset>1.0</offset>
      </volume>
      <reference-dist>10</reference-dist>
      <max-dist>500</max-dist>
    </engine>
    
    <engine>
      <name>engine running</name>
      <mode>looped</mode>
      <path>Aircraft/followme/Sounds/Renault4-running.wav</path>
      <condition>
	<and>
	<equals>
	  <property>sim/multiplay/generic/float[1]</property>
	  <value>0</value>
	</equals>
	<equals>
	  <property>sim/multiplay/generic/int[6]</property>
	  <value>1</value>
	</equals>
	</and>
      </condition>
      <volume>
	<property>sim/multiplay/generic/float[6]</property>
	<factor>3</factor>
	<min>0.5</min>
	<max>1.0</max>
	<offset>0.3</offset>
      </volume>
      <delay-sec>1</delay-sec>
      <reference-dist>10</reference-dist>
      <max-dist>500</max-dist>
    </engine>
    
    <engine>
      <name>engine speed</name>
      <mode>looped</mode>
      <path>Aircraft/followme/Sounds/Renault4-speed.wav</path>
      <condition>
	<and>
	<not-equals>
	  <property>sim/multiplay/generic/float[1]</property>
	  <value>0</value>
	</not-equals>
	<equals>
	  <property>sim/multiplay/generic/int[6]</property>
	  <value>1</value>
	</equals>
	</and>
      </condition>
      <volume>
	<property>sim/multiplay/generic/float[6]</property>
	<factor>1</factor>
	<min>0.3</min>
	<max>1.0</max>
	<offset>0.10</offset>
      </volume>
      <pitch>
	<property>sim/multiplay/generic/float[6]</property>
	<factor>0.15</factor>
	<min>0.0</min>
	<max>0.5</max>
      </pitch>
      <reference-dist>100</reference-dist>
      <max-dist>1000</max-dist>
    </engine>
    
    <drifting>
      <name>drifting</name>
      <mode>looped</mode>
      <path>Aircraft/followme/Sounds/Renault4-drifting.wav</path>
      <condition>
	<or>
	<greater-than>
	  <property>sim/multiplay/generic/float[9]</property>
	  <value>8000</value>
	</greater-than>
	<less-than>
	  <property>sim/multiplay/generic/float[9]</property>
	  <value>-8000</value>
	</less-than>
	</or>
      </condition>
      <volume>
	<property>sim/multiplay/generic/float[10]</property>
	<factor>0.01</factor>
	<max>1</max>
      </volume>
      <reference-dist>100</reference-dist>
      <max-dist>1000</max-dist>
    </drifting>
    
    <tire-rumble>
      <name>tire-rumble</name>
      <mode>looped</mode>
      <path>Sounds/rumble.wav</path>
      <condition>
	<or>
	  <property>sim/multiplay/generic/int[0]</property>
	  <property>sim/multiplay/generic/int[1]</property>
	  <property>sim/multiplay/generic/int[2]</property>
	  <property>sim/multiplay/generic/int[3]</property>
	</or>
      </condition>
      <volume>
	<property>sim/multiplay/generic/float[10]</property>
	<factor>.001</factor>
	<max>1</max>
      </volume>
      <reference-dist>10</reference-dist>
      <max-dist>500</max-dist>
    </tire-rumble>
    
    <brake>
      <name>brake</name>
      <mode>once</mode>
      <path>Aircraft/followme/Sounds/Renault4-brake.wav</path>
      <condition>
	<and>
	  <greater-than>
	    <property>sim/multiplay/generic/float[10]</property>
	    <value>7</value>
	  </greater-than>
	  <property>sim/multiplay/generic/int[17]</property>
	</and>
      </condition>
      <reference-dist>100</reference-dist>
      <max-dist>1000</max-dist>
    </brake>
    
    <!-- Doors -->
  
    <door>
      <name>opening1</name>
      <mode>once</mode>
      <path>Aircraft/followme/Sounds/Renault4-dooropen.wav</path>
      <condition>
       
	<greater-than>
          <property>sim/multiplay/generic/float[2]</property>
          <value>0.0</value>
        </greater-than>
	
      </condition>
      <volume>
        <factor>1</factor>
      </volume>
      <reference-dist>10</reference-dist>
      <max-dist>500</max-dist>
    </door>
    
    <door>
      <name>opening2</name>
      <mode>once</mode>
      <path>Aircraft/followme/Sounds/Renault4-dooropen.wav</path>
      <condition>
       
	<greater-than>
          <property>sim/multiplay/generic/float[3]</property>
          <value>0.0</value>
        </greater-than>
	
      </condition>
      <volume>
        <factor>1</factor>
      </volume>
      <reference-dist>10</reference-dist>
      <max-dist>500</max-dist>
    </door>
    
    <door>
      <name>opening3</name>
      <mode>once</mode>
      <path>Aircraft/followme/Sounds/Renault4-dooropen.wav</path>
      <condition>
       
	<greater-than>
          <property>sim/multiplay/generic/float[4]</property>
          <value>0.0</value>
        </greater-than>
	
      </condition>
      <volume>
        <factor>1</factor>
      </volume>
      <reference-dist>10</reference-dist>
      <max-dist>500</max-dist>
    </door>
    
    <door>
      <name>opening4</name>
      <mode>once</mode>
      <path>Aircraft/followme/Sounds/Renault4-dooropen.wav</path>
      <condition>
       
	<greater-than>
          <property>sim/multiplay/generic/float[5]</property>
          <value>0.0</value>
        </greater-than>
       
      </condition>
      <volume>
        <factor>1</factor>
      </volume>
      <reference-dist>10</reference-dist>
      <max-dist>500</max-dist>
    </door>
    
    <doorc>
      <name>closing1</name>
      <mode>once</mode>
      <path>Aircraft/followme/Sounds/Renault4-doorclose.wav</path>
      <condition>
       
	<less-than>
          <property>sim/multiplay/generic/float[2]</property>
          <value>0.02</value>
        </less-than>
	
      </condition>
      <volume>
        <factor>1</factor>
      </volume>
      <reference-dist>10</reference-dist>
      <max-dist>500</max-dist>
    </doorc>
    
    <doorc>
      <name>closing2</name>
      <mode>once</mode>
      <path>Aircraft/followme/Sounds/Renault4-doorclose.wav</path>
      <condition>
       
	<less-than>
          <property>sim/multiplay/generic/float[3]</property>
          <value>0.02</value>
        </less-than>
	
      </condition>
      <volume>
        <factor>1</factor>
      </volume>
      <reference-dist>10</reference-dist>
      <max-dist>500</max-dist>
    </doorc>
    
    <doorc>
      <name>closing3</name>
      <mode>once</mode>
      <path>Aircraft/followme/Sounds/Renault4-doorclose.wav</path>
      <condition>
       
	<less-than>
          <property>sim/multiplay/generic/float[4]</property>
          <value>0.02</value>
        </less-than>
	
      </condition>
      <volume>
        <factor>1</factor>
      </volume>
      <reference-dist>10</reference-dist>
      <max-dist>500</max-dist>
    </doorc>
    
    <doorc>
      <name>closing4</name>
      <mode>once</mode>
      <path>Aircraft/followme/Sounds/Renault4-doorclose.wav</path>
      <condition>
       
	<less-than>
          <property>sim/multiplay/generic/float[5]</property>
          <value>0.02</value>
        </less-than>
	
      </condition>
      <volume>
        <factor>1</factor>
      </volume>
      <reference-dist>10</reference-dist>
      <max-dist>500</max-dist>
    </doorc>
    
    <horn>
      <name>horn</name>
      <mode>once</mode>
      <path>Aircraft/followme/Sounds/Renault4-horn.wav</path>
      <condition>
       
	    <equals>
          <property>sim/multiplay/generic/int[18]</property>
          <value>1</value>
        </equals>
	
      </condition>
      <volume>
        <factor>1</factor>
      </volume>
      <reference-dist>100</reference-dist>
      <max-dist>1000</max-dist>
    </horn>
    
    </fx>
</PropertyList>
