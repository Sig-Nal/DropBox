<PropertyList>
 <path>D.ac</path>
 
  <!-- Internal instruments lighting -->

  <effect>
 <inherits-from>Effects/model-transparent</inherits-from>
  <object-name>cover</object-name>
</effect>
  
  <animation>
    <type>material</type>
    <object-name>cover</object-name>
    <emission>
      <factor-prop>controls/switches/gauge-light</factor-prop>
      <red>   0.35 </red>
      <green> 0.35 </green>
      <blue>  0.35 </blue>
    </emission>
  </animation>
  
  <animation>
    <type>material</type>     
    <object-name>text</object-name>
    <condition>
     <not-equals>
      <property>sim/multiplay/generic/float[1]</property>
      <value>1</value>
      </not-equals>
  </condition> 
    <emission>
      <factor-prop>controls/switches/gauge-light</factor-prop>
      <red>   0.35 </red>
      <green> 0.35 </green>
      <blue>  0.35 </blue>
    </emission>
  </animation>

  <animation>
  <type>material</type>
  <object-name>text</object-name>
   <condition>
     <equals>
      <property>sim/multiplay/generic/float[1]</property>
      <value>1</value>
      </equals>
  </condition> 
  <emission>
    <red>1.0</red>
    <green>1.0</green>
    <blue>1.0</blue>    
  </emission>
</animation>
  
<animation>
  <type>pick</type>
  <object-name>text</object-name>
  <visible>true</visible>
  <action>
    <button>0</button>
    <repeatable>true</repeatable>
    <binding>
      <command>property-assign</command>
      <property>sim/multiplay/generic/float[1]</property>
      <value>1</value>
    </binding>
  </action>
</animation>

</PropertyList>