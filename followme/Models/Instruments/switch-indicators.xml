<PropertyList>

  <path>switch.ac</path>

  <animation>
    <object-name>fond</object-name>
    <!--object-name>switch</object-name-->
  </animation>

  <animation>
    <type>material</type>
    <object-name>fond</object-name>
    <!--object-name>switch</object-name-->
    <emission>
      <factor-prop>controls/switches/gauge-light</factor-prop>
      <red>   0.3 </red>
      <green> 0.3 </green>
      <blue>  0.4 </blue>
    </emission>
  </animation>
  
  <animation>
    <type>pick</type>
    <object-name>switch</object-name>
    <action>
      <button>0</button>
      <binding>
        <command>property-toggle</command>
        <property>sim/multiplay/generic/int[9]</property>
      </binding>      
    </action>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>switch</object-name>
    <property>sim/multiplay/generic/int[9]</property>
    <factor> -50 </factor>
    <center>
      <x-m> 0 </x-m>
      <y-m> 0 </y-m>
      <z-m> 0 </z-m>
    </center>
    <axis>
      <x>  0 </x>
      <y>  1 </y>
      <z>  0 </z>
    </axis>
  </animation>


</PropertyList>
