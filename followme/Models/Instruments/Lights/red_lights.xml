<?xml version="1.0"?>

<PropertyList>

 <path>red_lights.ac</path>

  <animation>
    <type>material</type>

    <object-name>red_lights</object-name>
    <emission>
      <factor-prop>controls/switches/gauge-light</factor-prop>
      <red>   0.675 </red>
      <green> 0.0 </green>
      <blue>  0.0 </blue>
    </emission>
  </animation>

 <animation>
  <type>select</type>

  <object-name>red_lights</object-name>
   <condition>
    <equals>
 <property>sim/multiplay/generic/float[12]</property>
     <value>1</value>
    </equals>
   </condition> 
 </animation>

<effect>
 <inherits-from>Effects/model-transparent</inherits-from>
 <object-name>red_lights</object-name>
          <condition>
             <property>sim/rendering/rembrandt/enabled</property>
         </condition>
  </effect>      

<animation>
 <type>material</type>

 <object-name>red_lights</object-name>
 <emission>
  <red>0.675</red>
  <green>0.0</green>
  <blue>0.0</blue>
  <factor-prop>sim/multiplay/generic/float[12]</factor-prop>
 </emission>
 </animation>  

</PropertyList>
