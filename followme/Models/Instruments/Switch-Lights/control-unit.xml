<PropertyList>

  <path>control-unit.ac</path>

  <!--indicators, warn blink 1,2 -->

  <animation>
    <type>material</type>
    <object-name>S1out</object-name>
    <object-name>S2out</object-name>
    <emission>
      <factor-prop>controls/switches/gauge-light</factor-prop>
      <red>   0.05 </red>
      <green> 0.05 </green>
      <blue>  0.05 </blue>
    </emission>
  </animation>
  
  <animation>
    <type>select</type>
    <object-name>S1out</object-name>
    <object-name>S2out</object-name>
    <condition>
    <not-equals>
     <property>sim/model/lights/indicators/state</property>
     <value>1</value>
    </not-equals>
   </condition> 
  </animation>
  
  <animation>
    <type>material</type>
    <object-name>S1on</object-name>
    <object-name>S2on</object-name>
    <emission>
      <factor-prop>controls/switches/gauge-light</factor-prop>
      <red>   1.0 </red>
      <green> 1.0 </green>
      <blue>  1.0 </blue>
    </emission>
  </animation>
  
  <animation>
    <type>select</type>
    <object-name>S1on</object-name>
    <object-name>S2on</object-name>
    <condition>
    <equals>
     <property>sim/model/lights/indicators/state</property>
     <value>1</value>
    </equals>
   </condition> 
  </animation>
  
