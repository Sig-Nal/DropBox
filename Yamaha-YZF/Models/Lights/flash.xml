<?xml version="1.0" encoding="UTF-8"?>

<PropertyList>

  <path>flash.ac</path>

  <animation>
    <!-- Objets opaques -->

    <!-- Objets transparents -->
    <object-name>flash</object-name>
  </animation>

  <effect>
    <inherits-from>Effects/model-transparent</inherits-from>
    <object-name>flash</object-name>
  </effect>

  <animation>
    <type>noshadow</type>
    <object-name>flash</object-name>
  </animation>

  <animation>
    <type>flash</type>
    <object-name>flash</object-name>
    <center>
      <x-m> 0 </x-m>
      <y-m> 0 </y-m>
      <z-m> 0 </z-m>
    </center>
    <axis>
      <x> -1 </x>
      <y>  0 </y>
      <z>  0 </z>
    </axis>
    <power>1</power>
    <factor>2</factor>
    <offset>0</offset>
    <two-sides type="bool">false</two-sides>
    <min>0.5</min>
    <max>2</max>
  </animation>

  <animation>
    <type>select</type>
    <condition>
   <property>sim/multiplay/generic/int[5]</property>
        <value> true </value>
    </condition>
  </animation>

</PropertyList>
